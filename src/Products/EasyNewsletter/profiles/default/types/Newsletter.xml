<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    name="Newsletter"
    meta_type="Dexterity FTI"
    i18n:domain="Products.EasyNewsletter">

  <!-- Basic properties -->
  <property
      i18n:translate=""
      name="title">Newsletter</property>
  <property
      i18n:translate=""
      name="description">Newsletter container which holds Newsletter Issues and Subscribers.</property>

  <property name="allow_discussion">False</property>
  <property name="factory">Newsletter</property>
  <property name="icon_expr"></property>
  <property name="link_target"></property>

  <!-- Hierarchy control -->
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="Newsletter Subscriber" />
        <element value="Newsletter Issue" />
      <!--
    <element value="Document" />
    <element value="File" />
  -->
  </property>
  <!-- Schema, class and security -->
  <property name="add_permission">Products.EasyNewsletter.AddNewsletter</property>
  <property name="klass">Products.EasyNewsletter.content.newsletter.Newsletter</property>
  <property name="model_file"></property>
  <property name="model_source"></property>
  <property name="schema">Products.EasyNewsletter.content.newsletter.INewsletter</property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="false">
    <!-- Details about all standard behaviors following can be read at
         https://docs.plone.org/external/plone.app.dexterity/docs/reference/standard-behaviours.html
    -->
    <element value="plone.namefromtitle"/>
    <!-- <element value="plone.allowdiscussion"/> -->
    <element value="plone.excludefromnavigation"/>
    <element value="plone.shortname"/>
    <element value="plone.ownership"/>
    <element value="plone.publication"/>
    <element value="plone.categorization"/>
    <element value="plone.basic"/>
    <element value="plone.locking" />
    <!-- <element value="plone.app.referenceablebehavior.referenceable.IReferenceable" />-->
    <!-- <element value="plone.leadimage"/> -->
    <!--<element value="plone.relateditems"/>-->
    <element value="plone.richtext"/>
    <!--<element value="plone.tableofcontents"/>-->
    <!--<element value="plone.versionable" />-->
    <element value="plone.translatable" />
    <!--<element value="plone.nextprevioustoggle" />-->
    <!--<element value="plone.nextpreviousenabled" />-->
    <!--<element value="plone.navigationroot" />-->
    <!--<element value="plone.selectablecontrainstypes" />-->
  </property>

  <!-- View information -->
  <property name="add_view_expr">string:${folder_url}/++add++Newsletter</property>
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="immediate_view">view</property>
  <property name="view_methods">
    <element value="view"/>
  </property>

  <!-- Method aliases -->
  <alias
      from="(Default)"
      to="(dynamic view)"
  />
  <alias
      from="edit"
      to="@@edit"
  />
  <alias
      from="sharing"
      to="@@sharing"
  />
  <alias
      from="view"
      to="(selected layout)"
  />

  <!-- Actions -->
  <action
      action_id="view"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      title="View"
      url_expr="string:${object_url}"
      visible="True">
    <permission value="View"/>
  </action>
  <action
      action_id="edit"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      title="Edit"
      url_expr="string:${object_url}/edit"
      visible="True">
    <permission value="Modify portal content"/>
  </action>
  <action title="Archive"
    action_id="archive"
    category="easynewsletter"
    url_expr="string:${folder_url}"
    visible="True"
    i18n:domain="plone"
    i18n:attributes="title">
    <permission value="Modify portal content" />
  </action>
  <action title="Subscribers"
    action_id="subscribers"
    category="easynewsletter"
    url_expr="string:${folder_url}/newsletter-subscribers"
    visible="True"
    i18n:domain="plone"
    i18n:attributes="title">
    <permission value="Modify portal content" />
  </action>
  <action title="Masters"
    action_id="masters"
    category="easynewsletter"
    url_expr="string:${folder_url}/newsletter-masters"
    visible="True"
    i18n:domain="plone"
    i18n:attributes="title">
    <permission value="Modify portal content" />
  </action>
  <action title="Drafts"
    action_id="drafts"
    category="easynewsletter"
    url_expr="string:${folder_url}/newsletter-drafts"
    visible="True"
    i18n:domain="plone"
    i18n:attributes="title">
    <permission value="Modify portal content" />
  </action>
</object>
