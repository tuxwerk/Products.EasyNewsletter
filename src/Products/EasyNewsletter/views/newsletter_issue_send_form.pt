<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="EasyNewsletter"
  metal:use-macro="context/main_template/macros/master">
  <body>
    <metal:block fill-slot="content-core">
      <a class="link-parent"
        tal:attributes="href context/aq_parent/absolute_url"
        i18n:translate="easynewsletter_backtonewsletter_label">
  Back to newsletter
      </a>

      <br />
      <form tal:attributes="action string:${context/absolute_url}/send-issue"
            method="post">
        <span tal:replace="structure context/@@authenticator/authenticator" />

        <label for="sender name"
          i18n:translate="ENL_label_sender">
           Sender
        </label>

	<p>
	  <span tal:content="view/sender_name" />
	  &lt;<span tal:content="view/sender_email" />&gt;
	</p>

        <label for="subject"
          i18n:translate="EasyNewsletter_label_subject">
           Subject
        </label>

	<p>
	  <span tal:content="view/subject" />
	</p>

	<hr />

        <label for="test_receiver"
          i18n:translate="ENL_label_testEmail">
           Test email
        </label>

        <input type="text"
          name="test_receiver"
          size="40"
          tal:attributes="value view/test_receiver" />
	<br />
	<br />
        <input type="submit"
          class="context"
          name="test"
          value="Test Newsletter"
          i18n:attributes="value easynewsletter_test_button;" />
	<hr />

	<p>
	  Newsletter will be sent to
	  <span tal:content="view/receivers_size" />
	  receivers.
	</p>

        <input id="form_send"
               class="context"
               type="submit"
               name="send"
               value="Send Newsletter"
               i18n:attributes="value easynewsletter_send_button;" />
      </form>


    </metal:block>
  </body>
</html>
